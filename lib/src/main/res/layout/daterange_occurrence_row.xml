<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="0dp"
    android:orientation="vertical" >

    <include layout="@layout/divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout
        	android:id="@+id/daterange_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:layout_weight="1" 
            android:layout_gravity="center_vertical" >

			<LinearLayout 
				android:id="@+id/startDate"
				android:layout_width="wrap_content"
    			android:layout_height="wrap_content" 
    			android:layout_marginTop="12dp"
    			android:layout_alignParentLeft="true"
				>
            	<TextView
                	android:id="@+id/startYear"
                	android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:textColor="?attr/colorAccent"
                	android:minEms="2"
                	/>
				<TextView
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:textColor="?attr/colorAccent"
            		android:text=" - " />
            	<TextView
                	android:id="@+id/startMonth"
                	android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:textColor="?attr/colorAccent"
                	android:minEms="1"
               	 	/>
            	<TextView
            	    android:id="@+id/startMonthDayDelimiter"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:textColor="?attr/colorAccent"
            		android:text=" - " />
            	<TextView
            		android:id="@+id/startWeekday"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:textColor="?attr/colorAccent"
            		android:minEms="1" />
            	<TextView
                	android:id="@+id/startMonthDay"
                	android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:textColor="?attr/colorAccent"
                	android:minEms="1"
                	/>
                <ImageView
            		android:layout_width="wrap_content"
           			android:layout_height="wrap_content"
           			android:baselineAlignBottom="true"
           			android:tint="?attr/colorAccent"
           			android:src="@drawable/ic_action_edit_holo_light"/>
			</LinearLayout>
			         		
           	<LinearLayout
 				android:id="@+id/start_offset_container"
 				android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_below="@id/startDate"
            	android:layout_alignParentLeft="true"
            	android:orientation="horizontal"
            	>
            	<TextView
        			android:id="@+id/start_offset_label"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"          	
            		android:text="@string/offset_days" />
       			<EditText
            		android:id="@+id/start_offset"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:inputType="number|none"
            		android:minEms="2"
            		android:maxEms="2"
					android:maxLength="3"
					android:digits="+-0123456789" />
			</LinearLayout>
			
            <TextView
                android:id="@+id/to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/start_offset_container"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="@string/to"
               	 />
            
  
               	 
			<LinearLayout 
				android:id="@+id/endDate"
				android:layout_width="wrap_content"
    			android:layout_height="wrap_content" 
    			android:layout_alignParentLeft="true"
    			android:layout_below="@id/to"
    			android:layout_marginBottom="12dp"
				>
            	<TextView
                	android:id="@+id/endYear"
                	android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:textColor="?attr/colorAccent"
                	android:minEms="2"
                	/>
				<TextView
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:textColor="?attr/colorAccent"
            		android:text=" - " />
            	<TextView
                	android:id="@+id/endMonth"
                	android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:textColor="?attr/colorAccent"
                	android:minEms="1"
               	 	/>
            	<TextView
            	    android:id="@+id/endMonthDayDelimiter"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:textColor="?attr/colorAccent"
            		android:text=" - " />
            	<TextView
            		android:id="@+id/endWeekday"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:textColor="?attr/colorAccent"
            		android:minEms="1" />
            	<TextView
                	android:id="@+id/endMonthDay"
                	android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:textColor="?attr/colorAccent"
                	android:minEms="1"
                	/>
               	<ImageView
            		android:layout_width="wrap_content"
           			android:layout_height="wrap_content"
           			android:baselineAlignBottom="true"
           			android:tint="?attr/colorAccent"
           			android:src="@drawable/ic_action_edit_holo_light"/>
			</LinearLayout>
			<LinearLayout
 				android:id="@+id/end_offset_container"
 				android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_below="@id/endDate"
            	android:layout_alignParentLeft="true"
            	android:orientation="horizontal"
            	>
            	<TextView
        			android:id="@+id/end_offset_label"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"          	
            		android:text="@string/offset_days" />
       			<EditText
            		android:id="@+id/end_offset"
            		android:layout_width="wrap_content"
            		android:layout_height="wrap_content"
            		android:inputType="number|none"
            		android:minEms="2"
            		android:maxEms="2"
					android:maxLength="3"
					android:digits="+-0123456789" />
			</LinearLayout>
        </RelativeLayout>

        <include layout="@layout/menu" />
    </LinearLayout>

</LinearLayout>